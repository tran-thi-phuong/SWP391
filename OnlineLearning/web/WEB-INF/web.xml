        <url-pattern>/SubjectServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Homepage</servlet-name>
        <url-pattern>/Homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogList</servlet-name>
        <url-pattern>/blogs</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>blogDetail</servlet-name>
        <url-pattern>/blogDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseStat</servlet-name>
        <url-pattern>/courseStat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationStat</servlet-name>
        <url-pattern>/registrationStat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationLists</servlet-name>
        <url-pattern>/listRegistration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationDetail</servlet-name>
        <url-pattern>/registrationDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRegistrationBySale</servlet-name>
        <url-pattern>/addRegistrationBySale</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CampaignList</servlet-name>
        <url-pattern>/campaignList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StopCampaign</servlet-name>
        <url-pattern>/stopCampaign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartCampaign</servlet-name>
        <url-pattern>/startCampaign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateCampaign</servlet-name>
        <url-pattern>/updateCampaign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
