<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Authentication Servlets -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RevenueStat</servlet-name>
        <servlet-class>controller.RevenueStat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Verify</servlet-name>
        <servlet-class>controller.Verify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResendCode</servlet-name>
        <servlet-class>controller.ResendCode</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <!-- Password Management Servlets -->
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>controller.changePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findAccount</servlet-name>
        <servlet-class>controller.findAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgotPassword</servlet-name>
        <servlet-class>controller.forgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resetPassword</servlet-name>
        <servlet-class>controller.resetPassword</servlet-class>
    </servlet>
    <!-- Profile Management Servlets -->
    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>controller.UpdateProfile</servlet-class>
    </servlet>
    <!-- Homepage and Content Servlets -->
    <servlet>
        <servlet-name>Homepage</servlet-name>
        <servlet-class>controller.Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlogList</servlet-name>
        <servlet-class>controller.BlogList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>blogDetail</servlet-name>
        <servlet-class>controller.blogDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SliderServlet</servlet-name>
        <servlet-class>controller.SliderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubjectServlet</servlet-name>
        <servlet-class>controller.SubjectServlet</servlet-class>
    </servlet>
    <!-- Statistics Servlets -->
    <servlet>
        <servlet-name>CourseStat</servlet-name>
        <servlet-class>controller.CourseStat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationStat</servlet-name>
        <servlet-class>controller.RegistrationStat</servlet-class>
    </servlet>
    <!-- Registration Management Servlets -->
    <servlet>
        <servlet-name>RegistrationLists</servlet-name>
        <servlet-class>controller.RegistrationLists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationDetail</servlet-name>
        <servlet-class>controller.RegistrationDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRegistrationBySale</servlet-name>
        <servlet-class>controller.AddRegistrationBySale</servlet-class>
    </servlet>
    <!-- Campaign Management Servlets -->
    <servlet>
        <servlet-name>CampaignList</servlet-name>
        <servlet-class>controller.CampaignList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StopCampaign</servlet-name>
        <servlet-class>controller.StopCampaign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StartCampaign</servlet-name>
        <servlet-class>controller.StartCampaign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateCampaign</servlet-name>
        <servlet-class>controller.UpdateCampaign</servlet-class>
    </servlet>
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>CustomerStat</servlet-name>
        <servlet-class>controller.CustomerStat</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findAccount</servlet-name>
        <url-pattern>/findAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forgotPassword</servlet-name>
        <url-pattern>/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resetPassword</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Verify</servlet-name>
        <url-pattern>/verify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResendCode</servlet-name>
        <url-pattern>/resendCode</url-pattern>
